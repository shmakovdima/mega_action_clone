@import '../variables.styl'

.admin
  
  .header
    position fixed
    width 100%
    background rgba(33,47,51,0.8);
    box-sizing border-box
    padding: 20px 0
    height: 60px
    line-height 23px
    font-weight bold
    z-index 4
    top 0px
    
    &_logo
      line-height 46px
     
      font-weight bold
      background url(../images/logo.png) left center no-repeat
      background-size contain
      font-family "Helvetica Neue",Helvetica,Arial,sans-serif
      height 24px
      min-width 130px
      margin-top -1px

      & a
        position absolute
        z-index 2
        width 100%
        height 100%
        cursor pointer

    &_logout
      margin-top -8px

    &_desc
      text-transform uppercase
      
    
      
.normal
  .main
  .expert
    .navbar  
      margin-bottom 0px

      &-default
        background-color transparent
        border none
        overflow visible
        z-index 45
        padding 30px 15px 15px 15px
        
        .decloration
          font-size 20px
          line-height 76px
          opacity 0.9
        
      &-header
        
        & a
          height 36px
          width 126px
          background url(images/mega_logo.png)
          background-size contain
          background-position top left 
          

      &-brand 
          padding 0px
          
  .header
    &_nav
      color #ffffff
      font-size 16px
      width 100%
      line-height 40px
      cursor pointer
      
      &.active
        color #ffc064
        
        &:hover
          opacity 1


      & + .header_nav
        margin-left 50px
        
    &_check
      background url(images/firefox-bag.png) no-repeat
      width: 158px
      height: 41px
      font-size: 14px
      line-height 40px
      cursor pointer
      user-select(none) 
      transition 300ms all ease-in
      
      &:hover
      &:active
        opacity 0.7
 
@media (max-width:  1199px)
  .normal

    .navbar     
      
      &_nav
        
        & + .header_nav
          margin-left 30px

    
@media (max-width:  991px)
  .normal
    .main   
      .navbar     
        
        &_nav
          
          & + .header_nav
            margin-left 30px

        &-header
          padding-top 15px
          
          & a
            width 50px
            height 14px
            background-repeat no-repeat

        &-default
          padding  0px 15px
          
          .decloration
            font-size 16px 
            line-height 20px
            margin-top 14px
        
          .counter
            margin-top -15px
            height 70px
            width 140px
            
            &_desc
              font-size 9px
              color white
              padding-bottom 0px
              

             & ul 
               
               & + span
                margin-top -7px
               
               &:after
                 margin-top 0px
                 top 15px
                 font-size 12px
                 margin-left 3px

               & li
                width 16px
                height 22px 
                font-size 16px
                line-height 17px
                
                &.lefted
                  margin-right 7px
                
                &:first-child:before
                &:last-child:before
                &.lefted:before
                  margin-left -2px
                  margin-top 9px
                  
                 &:last-child:before
                  margin-left 16px    
                
                 &.lefted:before
                   margin-left 19px
                  
@media (max-width:  400px) 
  .normal
    .main
      .navbar 
        &-default  
          .decloration
            line-height 16px
            font-size 14px
            margin-top 7px
            width 100px
        
