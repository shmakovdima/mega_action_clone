        width 25px
        padding 0
        cursor pointer
        transition 450ms all ease-in
        transform rotate(45deg)
        text-align center
        color white
        visibility visible
        z-index 54
        opacity 1
        display block
        
        &:hover
          transform rotate(405deg)
          opacity 0.7
     
      & input[type='text']
      & input[type='email']
      & input[type='tel']
      textarea
        max-width 341px
        padding 10px 20px
        padding-top 0px
        font-size 22px
        color color_black
        transform scaleX(1.0037)
        border none
        width 100%
        resize none
        border-bottom 1px solid color_blue 

        &.select_mega
          background-position 304px center
          cursor pointer
          background-repeat no-repeat
          background-image url(images/down.png)
        
        &:focus
          outline none
          border none
          border-bottom 1px solid color_blue
          color rgba(134,134,134,1)
              
          
        &.error
          border-color color_red_mega
          

          & + span
            visibility visible
    
      textarea
        padding-bottom 0px
        overflow hidden!important
        height 30px
        resize none
        padding-top 0px
        line-height 26px
        transition 10ms height linear
        max-height 220px

      h2
        
        &.callback
          color #15728f
          font-size: 30px
          font-family PlayfairDisplay-Bold
          padding-bottom 35px
          margin-top -25px
          margin-bottom 0px
          line-height: 46px

          
      button
      input[type='submit']
        &.callback
          position absolute
          bottom 44px

      & input[type='checkbox']
        display none 

      & span
        width 100%
        display block
        visibility hidden
        font-size 14px
        color color_red_mega
        padding 0px 20px
        min-height 29px
        height 30px
        text-align left
        transform scaleX(1.0037)
        line-height 30px
        
      .checkbox input
          display none
          
          & + label
           padding-left 40px
           font-size 14px
           text-decoration underline
           color color_black
           text-align left
           line-height 16px
           padding-bottom 40px
           
          & + label:before
            content ""
            display block
            border 2px solid color_blue
            width 20px
            height 20px
            left 0px
            text-align center
            font-size 16px
            position absolute
            
          &:checked + label:before
            content "âœ”"
            color white
            background color_blue
      
      .popup_prereg_mega
        margin-top 50px
        min-width 341px
        max-width 341px
        width 100%
        padding-top 0px
        background-color #f9f9f9
        
        & span
          color color_black
          height 29px
          font-size 14px
          visibility visible
          transform scaleY(1.0015)
          padding-left 20px
          font-family DINPro-Medium
          text-transform uppercase
          line-height 29px
          cursor pointer
          transition 50ms all ease-in
          
          &.active
          &:hover:not(.city):not(.my_mega)
