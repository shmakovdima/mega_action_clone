            color white

          &.city
            color color_blue
            font-family DINPro-Medium
            line-height 34px
            font-size 12px
            cursor default

          &.my_mega 
            font-size 22px
            height 52px
            background-position 304px center
            cursor pointer
            font-family DINPro_regular
            background-repeat no-repeat
            background-image url(images/down.png)
            padding 10px 20px
            padding-top 12px 
            color #9a9a9a
            border-bottom 1px solid color_blue
            transform scaleX(1.0037)
            
